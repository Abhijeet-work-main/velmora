# Server Configuration
PORT=3000
NODE_ENV=development
FRONTEND_URL=http://localhost:3000

# Database Configuration (Supabase)
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_ANON_KEY=your-supabase-anon-key
SUPABASE_SERVICE_KEY=your-supabase-service-key

# Authentication
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRES_IN=24h

# API Keys for External Services
NEWS_API_KEY=your-news-api-key
OPENWEATHER_API_KEY=your-openweather-api-key
ALPHA_VANTAGE_API_KEY=your-alpha-vantage-api-key
COINAPI_KEY=your-coinapi-key
RAPID_API_KEY=your-rapidapi-key
E_COMMERCE_API_KEY=your-e-commerce-api-key
RAPIDAPI_HOST=your-rapidapi-host

# Internal API Keys (comma-separated)
API_KEYS=internal-api-key-1,internal-api-key-2

# Redis Configuration (optional)
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=

# Logging
LOG_LEVEL=info

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
SCRAPING_RATE_LIMIT_MAX=10

# Browser Configuration
BROWSER_HEADLESS=new
BROWSER_TIMEOUT=30000

# Scheduler Configuration
ENABLE_SCHEDULER=true
CLEANUP_INTERVAL_HOURS=24
DATA_RETENTION_DAYS=30

# Email Configuration (optional)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password

# Security
HELMET_CSP_ENABLED=true
CORS_ORIGINS=http://localhost:3000,https://your-domain.com

# Monitoring
SENTRY_DSN=your-sentry-dsn
ANALYTICS_ID=your-analytics-id

# Deployment
VERCEL_URL=https://your-app.vercel.app
NETLIFY_URL=https://your-app.netlify.app

# Feature Flags
ENABLE_USER_REGISTRATION=true
ENABLE_SOCIAL_LOGIN=false
ENABLE_PREMIUM_FEATURES=false
ENABLE_ANALYTICS=true
ENABLE_CACHING=true

# Limits
MAX_URLS_PER_REQUEST=10
MAX_SCRAPING_CONCURRENT=5
MAX_USER_SAVED_ITEMS=1000
MAX_CUSTOM_SCRAPERS=50

# Notification Services
PUSH_NOTIFICATION_KEY=your-push-notification-key
SLACK_WEBHOOK_URL=your-slack-webhook-url
DISCORD_WEBHOOK_URL=your-discord-webhook-url 